{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    
    <h2 id="h2Infos">Vos messages</h2>

{% if messages is empty %}
    <h3>Aucun message pour le moment</h3>
{% else %}

    <div class="divMess">
        {% for msg in messages %}
            <div class="card darkMode">                
                <div class="div1">
                    <span class="date">{{ msg.date }}</span>
                    <span class="email"><a href="mailto:{{ msg.email }}" target="_blank">{{ msg.email }}</span>
                    <a class="delete-btn" href="{{ path('app_deleteMessage', { index: loop.index0 }) }}" onclick="return confirm('Supprimer ce message ?');">âœ–</a>
                </div>

                <div class="div2">
                    <span class="prenom">{{ msg.prenom }}</span>
                    <span class="nom">{{ msg.nom }}</span>
                </div>

                <div class="div3">
                    <p>Message: </p>{{ msg.message }}
                </div>
            </div>
        {% endfor %}
    </div>
    
{% endif %}

    <a class="HP" href="#">Haut de page</a>

{% endblock %}