{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h2 id="h2Infos">Inscription</h2>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'formInsc darkMode'}}) }}

        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.address) }}
        {{ form_row(registrationForm.postal) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.phone) }}

        <button type="submit" class="bout">Envoyer</button>
    {{ form_end(registrationForm) }}
{% endblock %}
